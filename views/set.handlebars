<div class="row">
    <div class="col-sm-12">
        <h1>Update Profile</h1>
        <form class="form" action="/setinfo" method="post">
            <div class="form-group">
                <label>City</label>
                <input name="city" class="form-control" value="{{user.city}}">
            </div>
            <div class="form-group">
                <label>State</label>
                <input name="state" class="form-control" value="{{user.state}}">
            </div>
            <button class="btn btn-lg btn-primary" type="submit">Save changes</button>
        </form>
    </div>
    {{#equal user.provider 'local'}}
    <div class="col-sm-12">
        <h1>Change Password</h1>
        <form class="form" action="setpass" method="post">
            <div class="form-group">
                <label>Current Password</label>
                <input name="password" class="form-control" required type="password">
            </div>
            <div class="form-group">
                <label>New Password</label>
                <input name="newPassword" class="form-control" required type="password">
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Save changes</button>
        </form>
    </div>
    {{/equal}}
</div>
